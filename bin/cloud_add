#!/bin/sh

#CLOUD_CTLR=https://cc.cldstr.com/controllers/$DISTRO/rackspace-us-ss
CLOUD_CTLR=https://cc.cldstr.com/controllers/red/amazon-us-east-1-ss

CLOUD=$1
if [ -z $CLOUD ]; then
  echo "usage: cloud_add <cloud_name>"
  exit 1
fi

if [ -z $DISTRO ]; then
  DISTRO='red'
fi

cldstr-instantiate-cloud.pl \
	--accounts ${CLOUDS}/accounts.json \
	--out ${CLOUDS}/$CLOUD.json \
        $CLOUD_CTLR

exit 0
